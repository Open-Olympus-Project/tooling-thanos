store:
  enabled: false

query:
  http:
    ingress:
      enabled: false
  grpc:
    ingress:
      enabled: true
      annotations:
        kubernetes.io/ingress.class: nginx
        nginx.ingress.kubernetes.io/backend-protocol: "GRPC"
        ingress.kubernetes.io/ssl-redirect: "true"
      hosts:
        - "{{ fqdn }}"
      tls:
        - secretName: thanos-query-grpc-tls
          hosts:
            - {{ fqdn }}
compact:
  enabled: false

bucket:
  enabled: false

sidecar:
  enabled: true
